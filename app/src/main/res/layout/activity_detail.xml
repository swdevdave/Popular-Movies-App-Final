<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/movie_backdrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/movie_poster"
            tools:layout_height="300dp" />

        <RelativeLayout
            android:id="@+id/data_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_backdrop"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Title" />

            <TextView
                android:id="@+id/user_rating_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/movie_title"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/rating"
                android:textColor="#000"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/user_rating_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movie_title"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/user_rating_text"
                android:background="@drawable/rating_background"
                android:drawableStart="@drawable/ic_star_yellow_24dp"
                android:paddingStart="2dp"
                android:paddingEnd="5dp"
                android:textColor="#000"
                android:textSize="15sp"
                tools:text="0.0" />

            <TextView
                android:id="@+id/release_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_rating_text"
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:text="@string/release_date"
                android:textColor="#000" />

            <TextView
                android:id="@+id/release_date_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_rating_text"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/release_date_text"
                android:textColor="#000"
                tools:text="1/1/2018" />


            <TextView
                android:id="@+id/synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/release_date_data"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:textColor="#000"
                tools:text="synopsissynopsissynopsissynopsissynopsissynopsissynopsissynopsissynopsissynopsissynopsissynopsissynopsis" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>